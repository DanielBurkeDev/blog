<div class="container mx-auto content_container">
<h1>Articles</h1>

<p>
There are <%= Article.public_count %> articles and counting!
</p>

<ul id="articles-list">
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>

<%= link_to "New Article", new_article_path, :class => "btn btn-primary" %>

</div>

