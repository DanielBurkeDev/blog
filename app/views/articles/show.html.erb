<div class="container content_container">

<div class="blog-post">
  <h1 class="blog-post-title"><%= @article.title %></h1>
  <p><%= @article.body %></p>
</div>

<ul class="article-edit-delete">
  <li><%= link_to "Edit", edit_article_path(@article), :class => "btn btn-primary btn-sm" %></li>
  <li><%= link_to "Delete", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" }, :class => "btn btn-danger btn-sm"%></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a Comment:</h2>
<%= render 'comments/form' %>
</div>
